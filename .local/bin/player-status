#!/usr/bin/env bash

PLAYER=spotify

status="$(playerctl -p "$PLAYER" status 2> /dev/null)"
metadata="$(playerctl -p "$PLAYER" metadata -f '{{title}} - {{artist}}' 2> /dev/null)"

if [ "$status" = "Playing" ]; then
    printf "%s" " $metadata"
else
    if [ $(($(date +"%S") %2 )) -eq 0 ]; then
        printf "%s" " $metadata"
    else
        printf "Paused"
    fi
fi
